doctype html
html(lang="es")
	
	head
		title= titulo
		link(href="stylesheets/style.css", rel='stylesheet')

	body
		h1 
			a(href="/")=titulo

		div.agregar
			a(href="/agregar").agregar Agregar			

		div.contenedor

		
		- for (var i in camisetas) {
			div.item
				h2="Camiseta "+camisetas[i].color+" Precio: $" +camisetas[i].precio
				img(src=camisetas[i].imagen, width="250")
				a(href="/tienda/comprar/" + camisetas[i].color  ).comprar  Comprar
		- }