doctype html
html(lang="es")
	
	head
		title= titulo
		link(href="stylesheets/style.css", rel='stylesheet')

	body
		h1 
			a(href="/")=titulo

		div.agregar
			a(href="/agregar") Agregar			

		div.contenedor

		
		- for (var i = 0; i < camisetas.length ; ++i) {
			div.item
				h2="Camiseta " +camisetas[i].precio
				img(src=camisetas[i].imagen, width="250")
				a(href="/tienda/comprar/" + camisetas[i].titulo  ).comprar  Comprar
		- }